journal = {Plasma Phys. Control. Fusion},
pages = {A73--A93},
title = {{Reflectometry in Conventional and Advanced Plasma Scenarios on ASDEX Upgrade and Perspectives for ITER}},
volume = {43},
year = {2001}
}
